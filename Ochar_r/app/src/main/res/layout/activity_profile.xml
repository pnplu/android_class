<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#302923"
    android:src="@drawable/profile"
    tools:context="th.in.graffstutio.ochar_r.ProfileActivity">

    <ImageView
        android:id="@+id/IMGprofile_profilepage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/profile"
        />
    <TextView
        android:id="@+id/TVname_profilepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kamon Sudapun"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@id/IMGprofile_profilepage"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TVemail_profilepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="taasudapan@gmail.com"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_below="@id/TVname_profilepage"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:id="@+id/LNsection_Detail_user"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@id/TVemail_profilepage"
        android:layout_centerHorizontal="true"
        android:background="#464336"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/TVamount_post_profilepage"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"/>

        <TextView
            android:id="@+id/TVpost_profilepage"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="รายการอาหาร"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:paddingTop="23dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="55dp"/>

        <TextView
            android:id="@+id/TVamount_view_profilepage"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="12"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/TVview_profilepage"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="ผู้เข้าชม"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:paddingTop="23dp"
            android:paddingLeft="10dp"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LNsection_post_profilepage"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        android:layout_below="@id/LNsection_Detail_user"
        android:layout_centerHorizontal="true"
        android:background="#464336"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/RTfood1_profilepage"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="50"
            >
            <ImageView
                android:id="@+id/IMGimage_food1_profilepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_food1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stinsun Beach"
                android:textSize="20sp"
                android:textColor="#D9C37E"
                android:layout_below="@id/IMGimage_food1_profilepage"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RTfood2_profilepage"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="50"
            >
            <ImageView
                android:id="@+id/IMGimage_food2_profilepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_food2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maxico City"
                android:textSize="20sp"
                android:textColor="#D9C37E"
                android:layout_below="@id/IMGimage_food2_profilepage"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
