<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#302923"
    tools:context="th.in.graffstutio.ochar.MainActivity">

    <ImageView
        android:id="@+id/IMGlogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="35dp"/>

    <LinearLayout
        android:id="@+id/FORMemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/IMGlogo"
        >

        <ImageView
            android:id="@+id/IMGiconemail"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_email"
            android:layout_weight="5"
            />

        <EditText
            android:id="@+id/EDTEmail"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:paddingBottom="22dp"
            android:hint="Email Address"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_weight="95"
            android:paddingLeft="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/FORMpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/FORMemail"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/IMGiconpasswor"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_password"
            android:layout_weight="5"
            />
        <EditText
            android:id="@+id/EDTPassword"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:paddingBottom="22dp"
            android:hint="Password"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:Baseline="#fff"
            android:layout_weight="95"
            android:paddingLeft="15dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/BTNsignup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/FORMpassword"
        android:background="#958756"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/TVwordlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="i donâ€™t have an account. "
        android:layout_below="@id/BTNsignup"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="60dp"
        android:textSize="17sp"
        android:textAlignment="center" />
</RelativeLayout>
